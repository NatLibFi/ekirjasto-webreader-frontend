# Manifest Route Configuration

# Enable manifest route in production (default: false)
# Set to true to enable manifest route in production
MANIFEST_ROUTE_FORCE_ENABLE=<BOOLEAN>

# Comma-separated list of allowed domains for manifest URLs in production
# Required when forceEnable is true
# Set allowed domains in production
#MANIFEST_ALLOWED_DOMAINS=<ALLOWED_DOMAIN>, <ANOTHER_ALLOWED_DOMAIN>

# Asset Prefix Configuration
# Set the base path for assets (e.g., CDN URL or subdirectory)
# Example: https://cdn.example.com or /subdirectory
ASSET_PREFIX=

# Runtime Configuration - feed with env-file. Don't add to .env or such
readiumServerUrl: READIUM_SERVER # Readium-cli server url
readiumServerPort: READIUM_PORT # Readium-cli server port
readiumProtocol: READIUM_PROTOCOL # Readium-cli server protocol
backLinkUrl: BACKLINK_URL #Link to lib home from the reader
linkServerUrl: LINK_SERVER_URL #Link server for jwt tokens