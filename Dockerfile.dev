FROM node:22-alpine

WORKDIR /app

RUN apk add --no-cache libc6-compat \
    && corepack enable \
    && corepack prepare pnpm@latest --activate

COPY package*.json pnpm-lock.yaml ./
RUN pnpm install

# Copy everything; this will be overwritten by the volume during dev run
COPY . .

ENV NODE_ENV=development
ENV HOST=0.0.0.0
ENV PORT=3000
EXPOSE 3000

# Default to running the dev server; uses HOST/PORT env vars so we avoid CLI arg parsing problems
CMD ["pnpm", "dev"]